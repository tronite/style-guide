{
  "name": "@tronite/style-guide",
  "version": "0.0.8",
  "description": "Code style guide for Tronite applications",
  "keywords": [
    "tronite",
    "config",
    "eslint",
    "prettier",
    "typescript",
    "style guide"
  ],
  "homepage": "https://github.com/tronite/style-guide#readme",
  "bugs": {
    "url": "https://github.com/tronite/style-guide/issues",
    "email": "support@tronite.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tronite/style-guide"
  },
  "license": "MIT",
  "author": {
    "name": "Richard Solomou",
    "email": "richard@tronite.com",
    "url": "https://tronite.com"
  },
  "files": [
    "eslint",
    "prettier",
    "typescript"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "release": "release-it"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.10",
    "@rushstack/eslint-patch": "^1.7.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "prettier-plugin-packagejson": "^2.4.10",
    "prettier-plugin-tailwindcss": "^0.5.11"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "eslint": "^8.56.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "release-it": "^17.0.3",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@next/eslint-plugin-next": "^14.0.4",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "peerDependenciesMeta": {
    "@next/eslint-plugin-next": {
      "optional": true
    },
    "eslint": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "hooks": {
      "before:init": [
        "git pull",
        "pnpm lint",
        "pnpm format"
      ]
    }
  }
}
